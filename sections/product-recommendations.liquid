{% comment %}
Product Recommendations Section
- Shows related products via product.recommendations
- Falls back to first 4 products if no recommendations
- Fully responsive grid
{% endcomment %}

{% assign recommended_products = product.recommendations %}

{% if recommended_products == blank %}
  {% assign recommended_products = collections.all.products | slice: 0, 4 %}
{% endif %}

{% if recommended_products.size > 0 %}
  <section class="product-recommendations section">
    <div class="page-width">
      <h2 class="product-recommendations__heading">
        {{ section.settings.heading | default: "Recommended for You" }}
      </h2>

      <div class="product-recommendations__grid">
        {% for p in recommended_products %}
          <div class="product-recommendations__item">
            <a href="{{ p.url }}" class="product-recommendations__link">
              {% if p.featured_image %}
                <img src="{{ p.featured_image | img_url: 'medium' }}" alt="{{ p.title }}" class="product-recommendations__image">
              {% endif %}
              <p class="product-recommendations__title">{{ p.title }}</p>
              <p class="product-recommendations__price">{{ p.price | money }}</p>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% else %}
  <p class="product-recommendations__empty">No recommendations available.</p>
{% endif %}

{% schema %}
{
  "name": "Product Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "You may also like"
    }
  ],
  "presets": [
    {
      "name": "Product Recommendations",
      "category": "Products"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* Product Recommendations Section */
.product-recommendations {
  margin: 40px 0;
  font-family: 'Assistant', sans-serif;
}

.product-recommendations__heading {
  text-align: center;
  font-size: 2.2rem;
  margin-bottom: 24px;
  font-weight: 600;
}

.product-recommendations__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  justify-items: center;
}

.product-recommendations__item {
  text-align: center;
}

.product-recommendations__image {
  width: 150px;
  height: auto;
  margin-bottom: 10px;
}

.product-recommendations__title {
  font-size: 1rem;
  margin: 0 0 4px 0;
}

.product-recommendations__price {
  font-size: 0.95rem;
  font-weight: 500;
  color: #333;
  margin: 0;
}

/* Responsive */
@media (max-width: 1024px) {
  .product-recommendations__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .product-recommendations__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 540px) {
  .product-recommendations__grid {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}


{% assign recommended_products = product.recommendations %}

{% if recommended_products == blank %}
  {% assign recommended_products = collections.all.products | where: "id", "!=" , product.id | slice: 0, 4 %}
{% endif %}


{% comment %}
  Product Card Snippet - Styled for Recommendations Grid
{% endcomment %}

<div class="product-card">
  <a href="{{ product.url }}">
    <div class="product-image">
      {% if product.images.size > 0 %}
        <img src="{{ product.images.first | img_url: '400x400' }}" alt="{{ product.title | escape }}">
      {% else %}
        <img src="//via.placeholder.com/400" alt="Placeholder">
      {% endif %}
    </div>
    <h3 class="product-title">{{ product.title }}</h3>
    <p class="product-price">{{ product.price | money }}</p>
  </a>
</div>

<style>
.product-card {
  text-align: center;
  font-family: 'Assistant', sans-serif;
  background-color: #fff;
  padding: 12px;
  border: 1px solid #eee;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-card a {
  color: inherit;
  text-decoration: none;
}

.product-card a:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 12px rgba(0,0,0,0.1);
}

.product-card a:hover .product-title {
  text-decoration: underline;
}

.product-image {
  width: 100%;
  height: 180px;
  overflow: hidden;
}

.product-image img {
  width: 20%;
  height: 100%;
  object-fit: cover;
  border-radius: 0; /* Keep no border radius */
  transition: transform 0.3s ease;
}

.product-card a:hover .product-image img {
  transform: scale(1.05);
}

.product-title {
  margin: 10px 0 6px;
  font-size: 1rem;
  line-height: 1.3;
  font-weight: 500;
  color: #111;
}

.product-price {
  font-weight: bold;
  font-size: 1.05rem;
  color: #111;
  margin: 0;
}
</style>
