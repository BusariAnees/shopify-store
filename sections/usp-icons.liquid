<div class="usp-icons">
  <div class="usp-icons__inner">
    {% if section.settings.heading != blank %}
      <h2 class="usp-icons__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="usp-icons__grid">
      {% for block in section.blocks %}
        <div class="usp-icons__item">
          <div class="usp-icons__icon-wrapper">
            {% if block.settings.icon_svg != blank %}
              {{ block.settings.icon_svg }}
            {% elsif block.settings.icon_image != blank %}
              <img 
                src="{{ block.settings.icon_image | image_url: width: 64 }}" 
                alt="{{ block.settings.title | escape }}" 
                class="usp-icons__icon"
              >
            {% endif %}
          </div>
          <div>
            <h3 class="usp-icons__title">{{ block.settings.title }}</h3>
            {% if block.settings.text != blank %}
              <p class="usp-icons__text">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "USP Icons",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Why Shop With Us?"
    }
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "USP Item",
      "settings": [
        {
          "type": "textarea",
          "id": "icon_svg",
          "label": "Icon SVG (Paste SVG code here)",
          "default": "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><path d='M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2'/><path d='M15 18H9'/><path d='M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14'/><circle cx='17' cy='18' r='2'/><circle cx='7' cy='18' r='2'/></svg>"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon (Optional image if no SVG is pasted)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "USP Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "USP Text",
          "default": "Enjoy free delivery on all orders over $50."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "USP Icons",
      "category": "Custom",
      "blocks": [
        { "type": "usp" },
        { "type": "usp" },
        { "type": "usp" }
      ]
    }
  ]
}
{% endschema %}
